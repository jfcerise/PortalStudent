@model IEnumerable<PortalStudent.Common.Domain.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentFirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentFirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { StudentId=item.StudentId }) |
            @Html.ActionLink("Details", "Details", new { StudentId=item.StudentId }) |
            @Html.ActionLink("Delete", "Delete", new { StudentId=item.StudentId })
        </td>
    </tr>
}

</table>
