@model PortalStudent.MVC5.Models.ClassWithStudentsVM

@{
    ViewBag.Title = "Composition Classe";
}

<h2>Etudiants de la classe '@Html.DisplayFor(model => model.Classe.Local)'</h2>

@using (Html.BeginForm("ListStudentSav","Class"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Classe.ClassId)

<table class="table">
    <tr>
        <th>
            Inscrit
        </th>
        <th>
            NOM Prénom
        </th>
        <th></th>
    </tr>
    @for (var i = 0; i < Model.Students.Count(); i++)
    {
        @Html.HiddenFor(m => m.Students[i].StudentId)

        <tr>
            <td>
                @Html.CheckBoxFor(m => m.Students[i].Subscribed)
            </td>
            <td>
                @Html.DisplayFor(m => m.Students[i].Name)
            </td>
        </tr>
    }

