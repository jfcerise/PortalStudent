        {
            <tr>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Subscribed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }*@
</table>

    <p>
        <input type="submit" value="Create" class="btn btn-default" /> |
 
        @Html.ActionLink("Back", "Details", new { ClassId = @Html.DisplayFor(model => model.Classe.ClassId) })
    </p>

}