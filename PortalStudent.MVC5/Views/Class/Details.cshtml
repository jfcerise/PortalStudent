@model PortalStudent.MVC5.Models.ClassWithStudentsVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Classe.Local)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Classe.Local)
        </dd>

    </dl>
</div>
<h2>Subcribed Students</h2>

<p>
    @Html.ActionLink("Add student", "ListStudent", new { ClassId = Model.Classe.ClassId })
</p>

<ul>
    @foreach (var item in Model.Students)
    {
    <li>
        @Html.DisplayFor(modelItem => item.StudentName), @Html.DisplayFor(modelItem => item.StudentFirstName) (@Html.ActionLink("Remove", "RemoveStudent", new { ClassId = Model.Classe.ClassId, StudentId = item.StudentId }))
    </li>
    }
</ul>
<p>
    @Html.ActionLink("Edit", "Edit", new { ClassId = Model.Classe.ClassId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
