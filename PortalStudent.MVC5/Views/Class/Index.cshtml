@model IEnumerable<PortalStudent.Common.Domain.Class>

@{
    ViewBag.Title = "Classes";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nouvelle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Local)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { ClassId=item.ClassId }) |
            @Html.ActionLink("Details", "Details", new { ClassId=item.ClassId }) |
            @Html.ActionLink("Delete", "Delete", new { ClassId=item.ClassId })
        </td>
    </tr>
}

</table>
